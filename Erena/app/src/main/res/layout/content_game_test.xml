<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorTheme"

app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a15520.newdictionary_ver2.Game1Activity"
    tools:showIn="@layout/activity_game_test">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutTree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/tree"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <TableLayout

        android:layout_width="match_parent"

        android:layout_height="70dp"

        android:stretchColumns="0,1">

        <TableRow
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:text="123" />


            <TextView
                android:id="@+id/time"
                android:layout_height="70dp"
                android:layout_column="1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/etPlayer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/title_activity_game_test"
        android:textAlignment="center"
        android:textColor="@color/ColorTheme"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/lvWordGame1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:fitsSystemWindows="true"
        android:stackFromBottom="true"
        android:transcriptMode="normal">

    </ListView>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
